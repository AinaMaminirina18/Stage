MDScreen:
    name:"centre"
    MDFloatLayout:
        orientation:'vertical'
        md_bg_color: '#377BFF'
        pos_hint:{"center_x": .5, "center_y":.5}
        size_hint: .8,.8
        radius:[20]

        MDBoxLayout:
            md_bg_color:'#F5EC0E'
            size_hint: .4, .1
            pos_hint:{"center_x": .5, "center_y":1}
            radius:[20]
            elevation: 2
            MDLabel:
                text: 'Centre de contrôle'
                halign:'center'
                font_name:"poppins"
                font_size: 18

        MDFillRoundFlatIconButton:
            pos_hint:{"center_x":.5 , "center_y":.7}
            md_bg_color:'white'
            icon: 'file-document-plus-outline'
            icon_size: '20sp'
            text:'Rédiger un rapport'
            font_name:"poppins"
            font_size: 18
            size_hint: .7, .1
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "rapport"

        MDFillRoundFlatIconButton:
            pos_hint:{"center_x":.5 , "center_y":.5}
            md_bg_color:'white'
            icon: 'file-document-outline'
            icon_size: '20sp'
            text:'Obtenir le rapport mensuel'
            font_name:"poppins"
            font_size: 18
            size_hint: .7, .1
            on_release:
                root.manager.current = 'Export'
                root.manager.transition.direction = "left"

        MDFillRoundFlatIconButton:
            pos_hint:{"center_x":.5 , "center_y":.3}
            md_bg_color:'#F5EC0E'
            icon: 'logout'
            icon_size: '20sp'
            theme_icon_color:'Custom'
            icon_color: 'grey'
            text:'Se deconnecter'
            font_name:"poppins"
            font_size: 18
            size_hint: .7, .1
            on_release:
                root.manager.transition.direction = "right"
                app.show_dialog("Deconnexion", "Voulez-vous deconnecter?")