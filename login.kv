MDScreen:
    name: "login"
    MDFloatLayout:
        md_bg_color: '#377BFF'
        pos_hint:{"center_x":.685, "center_y":.5}
        size_hint:.3, .7
        radius:[20]

        MDLabel:
            text: "Connexion"
            pos_hint:{"center_x":.5, "center_y":.8}
            halign: 'center'
            font_size: 25
            font_name:'poppins'
            theme_text_color: 'Custom'
            text_color: 'white'

        MDLabel:
            text: 'Identifiant :'
            font_size: 13
            font_name:'poppins'
            theme_text_color: 'Custom'
            text_color: 'white'
            pos_hint: {"center_x": .73, "center_y": .67}

        MDTextField:
            id: user
            mode: 'round'
            pos_hint:{"center_x": .5, "center_y":.6}
            size_hint: .6, None
            font_name:'poppins'
            line_color_focus: 'white'
            line_color_normal: 'white'
            text_color_focus: 'black'
            text_color_normal: 'black'
            fill_color_normal: 'white'

        MDLabel:
            text: 'Mot de passe :'
            font_size: 13
            font_name:'poppins'
            theme_text_color: 'Custom'
            text_color: 'white'
            pos_hint: {"center_x": .73, "center_y": .49}

        MDTextField:
            id: password
            mode: 'round'
            pos_hint:{"center_x": .5, "center_y":.42}
            md_bg_color: 'white'
            size_hint: .6, None
            font_name:'poppins'
            line_color_focus: 'white'
            line_color_normal: 'white'
            text_color_focus: 'black'
            text_color_normal: 'black'
            fill_color_normal: 'white'
            password: True

        MDIconButton:
            icon: './Image/eye.png'
            pos_hint:{"center_x": .74, "center_y":.42}
            on_release:
                self.icon = "./Image/eye.png" if self.icon == "eye-off" else "eye-off"
                password.password = False if password.password is True else True

        MDRaisedButton:
            text: 'Connecter'
            size_hint: .5, None
            pos_hint:{"center_x": .5, "center_y":.2}
            font_size: 15
            font_name:'poppins'
            md_bg_color: '#F5EC0E'
            on_release: app.log_in(user.text, password.text)

        MDRaisedButton:
            text: 'Créer un compte'
            size_hint: .5, None
            pos_hint:{"center_x": .5, "center_y":.1}
            font_size: 15
            font_name:'poppins'
            md_bg_color: 'white'
            on_release:
                root.manager.current = 'creation'
                root.manager.transition.direction = 'right'
                user.text = ''
                password.text = ''

    MDFloatLayout:
        md_bg_color: '#377BFF'
        pos_hint:{"center_x":.4, "center_y":.5}
        size_hint:.3, .8
        radius:[20]

        Image:
            source: 'Logo.png'
            pos_hint:{"center_x":.5, "center_y":.8}
            size_hint: .4, .4

        MDLabel:
            text: "Rapport de maintenance"
            pos_hint:{"center_x":.5, "center_y":.65}
            theme_text_color:'Custom'
            text_color: 'white'
            halign: 'center'
            font_name:'poppins'

        MDLabel:
            text: "Sponsorisé par Mamy"
            pos_hint:{"center_x":.5, "center_y":.2}
            halign: 'center'
            font_name:'poppins'
            font_size: 12

        MDLabel:
            text: "Application de rapport de panne"
            pos_hint:{"center_x":.5, "center_y":.15}
            halign: 'center'
            font_size: 12
            font_name:'poppins'

        MDLabel:
            text: "Version 1.0.0"
            pos_hint:{"center_x":.5, "center_y":.1}
            halign: 'center'
            font_size: 12
            font_name:'poppins'
